<form id="addCourse" name="addCourse" method="post" class="form-horizontal">
	<h2>Add a Course</h2>
	<div class="form-group form-group-lg">
		<label for="callsign" class="col-md-2 control-label">
			Course Call Sign:
		</label>
		<div class="col-md-8">
			<input type="text" id="callsign" name="callsign" class="form-control" placeholder="MTH 161" />
		</div>
	</div>
	<div class="form-group form-group-lg">
		<label for="title" class="col-md-2 control-label">
			Course Title:
		</label>
		<div class="col-md-8">
			<input type="text" id="title" name="title" class="form-control" placeholder="Calculus IA" />
		</div>
	</div>
	<div class="form-group form-group-lg">
		<label for="crn" class="col-md-2 control-label">
			CRN:
		</label>
		<div class="col-md-8">
			<input type="text" id="crn" name="crn" class="form-control" placeholder="29288" />
		</div>
	</div>
	<div class="form-group form-group-lg">
		<label class="col-md-2 control-label">
			Semester:
		</label>
		<div class="col-md-8">
			<div class="row">
				<div class="col-md-4">
					<select id="term" name="term" class="form-control" {{action "setSemester"}}>
						<option value="">--Semester--</option>
						<option value="03">Fall</option>
						<option value="04">Winter</option>
						<option value="01">Spring</option>
						<option value="02">Summer</option>
					</select>
				</div>
				<div class="col-md-4">
					<select id="year" name="year" class="form-control" {{action "setSemester"}}>
						<option value="">--Year--</option>
						<option value="15">2015</option>
						<option value="16">2016</option>
						<option value="17">2017</option>
					</select>
				</div>
			</div>
			<input type="hidden" id="semester" name="semester" value="" />
		</div>
	</div>
	<div class="form-group form-group-lg">
		<label class="col-md-2 control-label">
			Session:
		</label>
		<div class="col-md-8">
			<div class="row">
				<div class="col-md-2 checkbox-inline">
					<div class="col-md-1">
						<input type="checkbox" id="monday" name="monday" class="form-control sessionBox" value="M" {{action "setSession" on="change"}} />
					</div>
					<div class="col-md-1">
						<label for="monday" class="control-label">M</label>
					</div>
				</div>
				<div class="col-md-2 checkbox-inline">
					<div class="col-md-1">
						<input type="checkbox" id="tuesday" name="tuesday" class="form-control sessionBox" value="T" {{action "setSession" on="change"}} />
					</div>
					<div class="col-md-1">
						<label for="tuesday" class="control-label">T</label>
					</div>
				</div>
				<div class="col-md-2 checkbox-inline">
					<div class="col-md-1">
						<input type="checkbox" id="wednesday" name="wednesday" class="form-control sessionBox" value="W" {{action "setSession" on="change"}} />
					</div>
					<div class="col-md-1">
						<label for="wednesday" class="control-label">W</label>
					</div>
				</div>
				<div class="col-md-2 checkbox-inline">
					<div class="col-md-1">
						<input type="checkbox" id="thursday" name="thursday" class="form-control sessionBox" value="R" {{action "setSession" on="change"}} />
					</div>
					<div class="col-md-1">
						<label for="thursday" class="control-label">R</label>
					</div>
				</div>
				<div class="col-md-2 checkbox-inline">
					<div class="col-md-1">
						<input type="checkbox" id="friday" name="friday" class="form-control sessionBox" value="F" {{action "setSession" on="change"}} />
					</div>
					<div class="col-md-1">
						<label for="friday" class="control-label">F</label>
					</div>
				</div>
			</div>
			<input type="hidden" id="session" name="session" value="" />
		</div>
	</div>
	<div class="form-group form-group-lg">
		<div class="col-md-offset-2 col-md-2">
			<button type="submit" id="submitCourse" name="submitCourse" class="btn btn-primary btn-lg">Submit</button>
		</div>
	</div>
</form>
