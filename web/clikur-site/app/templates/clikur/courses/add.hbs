<div class="col-md-10">
	<form id="addCourse" name="addCourse" method="post" class="form-horizontal">
		<h2>Add a Course</h2>
		<div class="form-group form-group-lg">
			<label for="callsign" class="col-md-2 control-label">
				Course Call Sign:
			</label>
			<div class="col-md-8">
				<input type="text" id="callsign" name="callsign" class="form-control" placeholder="MTH 161" />
			</div>
		</div>
		<div class="form-group form-group-lg">
			<label for="title" class="col-md-2 control-label">
				Course Title:
			</label>
			<div class="col-md-8">
				<input type="text" id="title" name="title" class="form-control" placeholder="Calculus IA" />
			</div>
		</div>
		<div class="form-group form-group-lg">
			<label for="crn" class="col-md-2 control-label">
				CRN:
			</label>
			<div class="col-md-8">
				<input type="text" id="crn" name="crn" class="form-control" placeholder="29288" />
			</div>
		</div>
		<div class="form-group form-group-lg">
			<label class="col-md-2 control-label">
				Semester:
			</label>
			<div class="col-md-8">
				<div class="row">
					<div class="col-md-4">
						<select id="term" name="term" class="form-control" {{action "setSemester"}}>
							<option value="">--Semester--</option>
							<option value="03">Fall</option>
							<option value="04">Winter</option>
							<option value="01">Spring</option>
							<option value="02">Summer</option>
						</select>
					</div>
					<div class="col-md-4">
						<select id="year" name="year" class="form-control" {{action "setSemester"}}>
							<option value="">--Year--</option>
							<option value="15">2015</option>
							<option value="16">2016</option>
							<option value="17">2017</option>
						</select>
					</div>
				</div>
				<input type="hidden" id="semester" name="semester" value="" />
			</div>
		</div>
		<div class="form-group form-group-lg">
			<label class="col-md-2 control-label">
				Session:
			</label>
			<div class="col-md-8">
				<div class="row">
					<div class="col-md-2 checkbox-inline">
						<div class="col-md-1">
							<input type="checkbox" id="monday" name="monday" class="form-control sessionBox" value="M" 
								{{action "setSession" on="change"}} />
						</div>
						<div class="col-md-1">
							<label for="monday" class="control-label">M</label>
						</div>
					</div>
					<div class="col-md-2 checkbox-inline">
						<div class="col-md-1">
							<input type="checkbox" id="tuesday" name="tuesday" class="form-control sessionBox" value="T" 
								{{action "setSession" on="change"}} />
						</div>
						<div class="col-md-1">
							<label for="tuesday" class="control-label">T</label>
						</div>
					</div>
					<div class="col-md-2 checkbox-inline">
						<div class="col-md-1">
							<input type="checkbox" id="wednesday" name="wednesday" class="form-control sessionBox" value="W" 
								{{action "setSession" on="change"}} />
						</div>
						<div class="col-md-1">
							<label for="wednesday" class="control-label">W</label>
						</div>
					</div>
					<div class="col-md-2 checkbox-inline">
						<div class="col-md-1">
							<input type="checkbox" id="thursday" name="thursday" class="form-control sessionBox" value="R" 
								{{action "setSession" on="change"}} />
						</div>
						<div class="col-md-1">
							<label for="thursday" class="control-label">R</label>
						</div>
					</div>
					<div class="col-md-2 checkbox-inline">
						<div class="col-md-1">
							<input type="checkbox" id="friday" name="friday" class="form-control sessionBox" value="F" 
								{{action "setSession" on="change"}} />
						</div>
						<div class="col-md-1">
							<label for="friday" class="control-label">F</label>
						</div>
					</div>
				</div>
				<input type="hidden" id="session" name="session" value="" />
			</div>
		</div>
		<div class="form-group form-group-lg">
			<label class="col-md-2 control-label">
				Start Time:
			</label>
			<div class="col-md-8">
				<div class="row">
					<div class="col-md-4">
						<select id="startHour" name="startHour" class="form-control" {{action "setStartTime"}}>
							<option value="">--Hour--</option>
							<option value="7">7</option>
							<option value="8">8</option>
							<option value="9">9</option>
							<option value="10">10</option>
							<option value="11">11</option>
							<option value="12">12</option>
							<option value="13">13</option>
							<option value="14">14</option>
							<option value="15">15</option>
							<option value="16">16</option>
							<option value="17">17</option>
							<option value="18">18</option>
							<option value="19">19</option>
							<option value="20">20</option>
						</select>
					</div>
					<div class="col-md-4">
						<select id="startMinute" name="startMinute" class="form-control" {{action "setStartTime"}}>
							<option value="">--Minute--</option>
							<option value="00">00</option>
							<option value="05">05</option>
							<option value="10">10</option>
							<option value="15">15</option>
							<option value="20">20</option>
							<option value="25">25</option>
							<option value="30">30</option>
							<option value="35">35</option>
							<option value="40">40</option>
							<option value="45">45</option>
							<option value="50">50</option>
							<option value="55">55</option>
						</select>
					</div>
				</div>
				<input type="hidden" id="start_time" name="start_time" value="" />
			</div>
		</div>
		<div class="form-group form-group-lg">
			<label class="col-md-2 control-label">
				End Time:
			</label>
			<div class="col-md-8">
				<div class="row">
					<div class="col-md-4">
						<select id="endHour" name="endHour" class="form-control" {{action "setEndTime"}}>
							<option value="">--Hour--</option>
							<option value="7">7</option>
							<option value="8">8</option>
							<option value="9">9</option>
							<option value="10">10</option>
							<option value="11">11</option>
							<option value="12">12</option>
							<option value="13">13</option>
							<option value="14">14</option>
							<option value="15">15</option>
							<option value="16">16</option>
							<option value="17">17</option>
							<option value="18">18</option>
							<option value="19">19</option>
							<option value="20">20</option>
						</select>
					</div>
					<div class="col-md-4">
						<select id="endMinute" name="endMinute" class="form-control" {{action "setEndTime"}}>
							<option value="">--Minute--</option>
							<option value="00">00</option>
							<option value="05">05</option>
							<option value="10">10</option>
							<option value="15">15</option>
							<option value="20">20</option>
							<option value="25">25</option>
							<option value="30">30</option>
							<option value="35">35</option>
							<option value="40">40</option>
							<option value="45">45</option>
							<option value="50">50</option>
							<option value="55">55</option>
						</select>
					</div>
				</div>
				<input type="hidden" id="end_time" name="end_time" value="" />
			</div>		
		</div>
		<div class="form-group form-group-lg">
			<div class="col-md-offset-2 col-md-2">
				<button type="submit" id="submitCourse" name="submitCourse" class="btn btn-primary btn-lg" {{action "submit"}}>
					Submit				
				</button>
			</div>
		</div>
	</form>
</div>
<div class="col-md-2">
	<div class="col-md-10">
		{{#link-to "clikur.courses.index" tagName="button" id="btn_courses" name="btn_courses" classNames="btn btn-default"}}
			Return to Course List
		{{/link-to}}
	</div>
</div>
