<div id="registration" class="row">
	<form id="registrationInfo" name="registrationInfo" method="post" class="form-horizontal">
	
		<h1>Registration</h1>
	
		<div class="form-group form-group-lg">
			<label for="lastName" class="col-md-2 control-label">
				Last Name:
			</label>
			<div class="col-md-8">
				<input type="text" id="lastName" name="lastName" class="form-control" placeholder="Last Name" />
			</div>
		</div>
		<div class="form-group form-group-lg">
			<label for="firstName" class="col-md-2 control-label">
				First Name:
			</label>
			<div class="col-md-8">
				<input type="text" id="firstName" name="firstName" class="form-control" placeholder="First Name" />
			</div>
		</div>
		<hr class="col-md-10" />
		<div class="form-group form-group-lg">
			<label for="email" class="col-md-2 control-label">
				Email:
			</label>
			<div class="col-md-8">
				<input type="email" id="email" name="email" class="form-control" placeholder="Email" />
			</div>
		</div>
		<div class="form-group form-group-lg">
			<label for="confEmail" class="col-md-2 control-label">
				Confirm Email:
			</label>
			<div class="col-md-8">
				<input type="email" id="confEmail" name="confEmail" class="form-control" placeholder="Confirm Email" />
			</div>
			<div class="col-md-2">
				<p id="emailWarning" class="warning" style="color:red"></p>
			</div>
		</div>
		<hr class="col-md-10" />
		<div class="form-group form-group-lg">
			<label for="password" class="col-md-2 control-label">
				Password:
			</label>
			<div class="col-md-8">
				<input type="password" id="password" name="password" class="form-control" placeholder="Password" />
			</div>
		</div>
		<div class="form-group form-group-lg">
			<label for="firstName" class="col-md-2 control-label">
				Confirm Password:
			</label>
			<div class="col-md-8">
				<input type="password" id="confPassword" name="confPassword" class="form-control" placeholder="Confirm Password" />
			</div>
			<div class="col-md-2">
				<p id="passWarning" class="warning" style="color:red"></p>
			</div>
		</div>
		
		<div class="form-group form-group-lg">
			<div class="col-md-offset-2 col-md-2">
				<button type="button" id="submitInfo" name="submitInfo" class="btn btn-primary btn-lg" {{action "checkConfirmations"}}>Register</button>
			</div>
		</div>
		
	</form>
</div>
